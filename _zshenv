source ~/.zshlocal
export rushbin=$work/programs/bin

alias vi="nvim"
alias e="emacs -fs"
alias matlab="matlab -nodesktop -nosplash"
alias mutt="neomutt"

alias gs="git status"
alias gc="git commit"
alias gd="git diff"
alias ga="git add"

alias df="df -h"
alias du="du -h"
alias free="free -h"

alias yq="yaourtsearchandinstall"

# Run with md2pdf file.pdf file.md
alias md2pdf="pandoc -V geometry:margin=1in --pdf-engine=xelatex --variable mainfont=Helvetica -f gfm -o"

# CD work
function cdrush {
	cd $work/"$@"
}

function cddot {
	cd $HOME/dotfiles_and_friends/"$@"
}

compctl -/ -W "$work" cdrush
compctl -/ -W "$HOME/dotfiles_and_friends" cddot
