source ~/.zshlocal
# export rushbin=$work/programs/bin

alias vi="nvim"
alias e="emacs -fs"
alias matlab="matlab -nodesktop -nosplash"
alias mutt="neomutt"

alias gs="git status"
alias gc="git commit"
alias gd="git diff"
alias ga="git add"

alias df="df -h"
alias du="du -h"
alias free="free -h"

alias to="todo.sh"

# Run with md2pdf file.pdf file.md
alias md2pdf="pandoc -V geometry:margin=1in --pdf-engine=xelatex --variable mainfont=Helvetica -f gfm -o"

# CD work
function cddata {
	cd $work/data/"$@"
}

function cdprog {
	cd $work/programs/"$@"
}

function cdcron {
	cd $work/cronscripts/"$@"
}

function cddoc {
	cd $work/docs/"$@"
}

function cdpres {
	cd $work/presentations/"$@"
}

function cdout {
	cd $work/out/"$@"
}

function cddot {
	cd $HOME/dotfiles_and_friends/"$@"
}

compctl -/ -W "$work/data" cddata
compctl -/ -W "$work/programs" cdprog
compctl -/ -W "$work/cronscripts" cdcron
compctl -/ -W "$work/docs" cddoc
compctl -/ -W "$work/presentations" cdpres
compctl -/ -W "$work/out" cdout
compctl -/ -W "$HOME/dotfiles_and_friends" cddot
