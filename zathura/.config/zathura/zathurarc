set font "Hack Nerd Font Mono 12"

set adjust-open "width"
set incremental-search "true"
set statusbar-home-tilde "true"
set window-title-basename "true"
set selection-clipboard clipboard

map <C-/> nohlsearch
map <C-j> navigate next
map <C-k> navigate previous
map + zoom in
map - zoom out
map ZZ quit
map <C-d> quit
map p toggle_fullscreen
map <Space> toggle_index

map [fullscreen] <C-j> navigate next
map [fullscreen] <C-k> navigate previous
map [fullscreen] <C-[> toggle_fullscreen
map [fullscreen] <Space> toggle_index

map [index] <C-n> navigate next
map [index] <C-p> navigate previous
map [index] <C-Space> navigate_index expand

set highlight-active-color "#0030a6"
set highlight-transparency 0.3
set inputbar-bg "#ffffff"
set inputbar-fg "#000000"
set completion-bg "#ffffff"
set completion-fg "#000000"
set completion-highlight-bg "#ffffff"
set completion-highlight-fg "#000000"
set statusbar-bg "#ffffff"
set statusbar-fg "#000000"
